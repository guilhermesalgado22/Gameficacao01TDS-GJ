@page
@model Projetos.API.Pages.Projetos.Criar

@{
    ViewData["Title"] = "Criar Projeto";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    <hr/>

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Projeto.Nome"></label>
                    <input asp-for="Projeto.Nome" class="form-control" />
                    <span asp-validation-for="Projeto.Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Projeto.Descricao"></label>
                    <textarea asp-for="Projeto.Descricao" class="form-control"></textarea>
                    <span asp-validation-for="Projeto.Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Projeto.DataInicio"></label>
                    <input asp-for="Projeto.DataInicio" type="date" class="form-control" />
                    <span asp-validation-for="Projeto.DataInicio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Projeto.DataConclusaoPrevista"></label>
                    <input asp-for="Projeto.DataConclusaoPrevista" type="date" class="form-control" />
                    <span asp-validation-for="Projeto.DataConclusaoPrevista" class="text-danger"></span>
                </div>

                <!-- Você pode continuar adicionando os outros campos conforme necessário -->

                <div class="form-group mt-3">
                    <input type="submit" class="btn btn-primary" value="Salvar">
                    <a asp-page="/Projetos/Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
